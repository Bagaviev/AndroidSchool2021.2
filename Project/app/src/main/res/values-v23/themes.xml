<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MeteoHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_appbars</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/top_grad</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuItemMain">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/candal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Grid">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/tv_rect_detail</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="small_rounded_textviews">
        <item name="android:background">@drawable/tv_rect_small_items</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="big_rounded_textviews">
        <item name="android:background">@drawable/tv_rect_small_items</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Theme.MeteoHub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>