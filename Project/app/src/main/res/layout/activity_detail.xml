<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.DetailActivity">

    <TextView
            android:layout_width="165dp"
            android:layout_height="36dp"
            android:id="@+id/textViewWinSpDet"
            android:textSize="20sp"
            android:background="#8BFFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNiTDet"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/textViewDivV" />

    <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/textViewDescDet"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:background="#8BFFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDivH" />

    <TextView
            android:layout_width="286dp"
            android:layout_height="40dp"
            android:id="@+id/textViewDtDet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:textSize="24sp"
            android:background="#8BFFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:textStyle="bold" />

    <TextView
            android:layout_width="165dp"
            android:layout_height="36dp"
            android:id="@+id/textViewDayTDet"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:background="#8BFFFFFF"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescDet"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewDivV" />

    <TextView
            android:layout_width="165dp"
            android:layout_height="36dp"
            android:id="@+id/textViewNiTDet"
            android:textSize="20sp"
            android:background="#8BFFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewDayTDet"
            app:layout_constraintStart_toEndOf="@+id/textViewDivV" />

    <TextView
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:id="@+id/textViewPresDet"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:background="#8BFFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/textViewHumDet"
            android:layout_marginTop="24dp" />

    <TextView
            android:layout_width="165dp"
            android:layout_height="36dp"
            android:id="@+id/textViewHumDet"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:background="#8BFFFFFF"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDayTDet"
            app:layout_constraintEnd_toStartOf="@+id/textViewDivV" />

    <TextView
            android:text="TextView"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:id="@+id/textViewDivH"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDtDet"
            app:layout_constraintBottom_toTopOf="@+id/textViewDescDet"
            android:background="#818181"
            app:layout_constraintVertical_bias="0.36"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="TextView"
            android:layout_width="1dp"
            android:layout_height="120dp"
            android:id="@+id/textViewDivV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescDet"
            app:layout_constraintBottom_toTopOf="@+id/textViewPresDet"
            android:background="#818181"
            app:layout_constraintVertical_bias="0.53" />

</androidx.constraintlayout.widget.ConstraintLayout>