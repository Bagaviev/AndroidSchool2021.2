<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="238dp"
            android:layout_height="312dp"
            android:id="@+id/textViewData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toBottomOf="@+id/switchMethon"
            android:layout_marginTop="64dp"
            android:background="#E0EADC" />

    <Button
            android:text="Get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGet"
            app:layout_constraintTop_toBottomOf="@+id/textViewData"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.312"
            app:layout_constraintVertical_bias="0.716" />

    <Button
            android:text="Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPost"
            app:layout_constraintTop_toBottomOf="@+id/textViewData"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.716"
            app:layout_constraintStart_toEndOf="@+id/buttonGet"
            app:layout_constraintHorizontal_bias="0.35" />

    <androidx.appcompat.widget.SwitchCompat
            android:text="OkHttp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchMethon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.173"
            android:checked="false"/>

    <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewType"
            app:layout_constraintStart_toEndOf="@+id/switchMethon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewData"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintVertical_bias="0.445" />
</androidx.constraintlayout.widget.ConstraintLayout>