<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="0dp"
            android:layout_height="450dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.33999997" />

    <Button
            android:text="Добавить корзину"
            android:layout_width="94dp"
            android:layout_height="54dp"
            android:id="@+id/buttonAddBasket"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            android:textSize="10sp" />

    <Button
            android:text="Очистить корзины"
            android:layout_width="94dp"
            android:layout_height="54dp"
            android:id="@+id/buttonClearBaskets"
            app:layout_constraintTop_toTopOf="@+id/buttonAddBasket"
            app:layout_constraintBottom_toBottomOf="@+id/buttonAddBasket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonAddBasket"
            android:textSize="10sp" />

</androidx.constraintlayout.widget.ConstraintLayout>