<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/main_background">

    <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="255dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_l"
            app:layout_constraintVertical_bias="0.602" />

    <Button
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRestart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_l"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/textViewAds" />

    <TableLayout
            android:layout_width="275dp"
            android:layout_height="275dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/main_l">

        <TableRow
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv0" />

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv1" />

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv2" />
        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv3" />

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv4" />

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv5" />
        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv6" />

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv7" />

            <ImageView
                    style="@style/Theme.Lesson5.ImageViews"
                    android:id="@+id/iv8" />
        </TableRow>

    </TableLayout>

    <View
            android:layout_width="279dp"
            android:layout_height="279dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/main_field_shape"
            android:id="@+id/view"/>

    <TextView
            android:text="Ads"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:id="@+id/textViewAds"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="#61FFFC99"
            android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>